{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "@dcloudio/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "pages/**/*.vue",
    "components/**/*.vue",
    "api/**/*.js",
    "api/**/*.ts",
    "store/**/*.js",
    "store/**/*.ts",
    "utils/**/*.js",
    "utils/**/*.ts",
    "main.js"
  ],
  "exclude": [
    "node_modules",
    "unpackage",
    "src/**/*.nvue"
  ]
}
